<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002628">

    <LinearLayout
        android:id="@+id/admin_program_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Screen title -->
        <TextView
            android:id="@+id/tvProgramEditorTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Program Details"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="16dp" />

        <!-- Card with form -->
        <androidx.cardview.widget.CardView
            android:id="@+id/programCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#003838">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvProgramSectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Program Information"
                    android:textColor="#F4D186"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:id="@+id/etProgramName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Program name"
                    android:textColor="#F4F4F4"
                    android:textColorHint="#D2FFFFFF"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="#F4F4F4" />

                <EditText
                    android:id="@+id/etProgramDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select date"
                    android:focusable="false"
                    android:clickable="true"
                    android:textColor="#F4F4F4"
                    android:textColorHint="#D2FFFFFF"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#F4F4F4" />

                <EditText
                    android:id="@+id/etProgramTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select time"
                    android:focusable="false"
                    android:clickable="true"
                    android:textColor="#F4F4F4"
                    android:textColorHint="#D2FFFFFF"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#F4F4F4" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveProgram"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Save program"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#3CC1A0"
                    android:layout_marginTop="20dp"
                    app:cornerRadius="24dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
